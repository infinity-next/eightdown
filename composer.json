{
    "name": "infinity-next/eightdown",
    "description": "Eightdown is a Markdown implementation for Laravel that adds optional features imageboard users will be familiar with.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Moon",
            "email": "josh@jaw.sh",
            "homepage": "https://jaw.sh"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "illuminate/contracts": "^6.0",
        "illuminate/support": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0    "
    },
    "autoload": {
        "psr-4": {
            "InfinityNext\\Eightdown\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InfinityNext\\Tests\\Eightdown\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
